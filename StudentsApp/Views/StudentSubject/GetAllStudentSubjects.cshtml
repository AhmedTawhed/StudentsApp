@model List<StudentSubject>
@{
    ViewData["Title"] = "GetAllStudentSubjects";
}
<h1>All Data</h1>

<div class="container">
    <div class="table">
        <table id="myTable" class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Student</th>
                    <th scope="col">Subject</th>
                    <th scope="col">Grade</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var studentSubject in Model)
                {
                    <tr>
                        <td>@studentSubject.Student.Name</td>
                        <td>@studentSubject.Subject.Name</td>
                        <td style="color: @(studentSubject.Grade < 50 ? "red" : "green")">@studentSubject.Grade</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


